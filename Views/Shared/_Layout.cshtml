<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Store</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="btn btn-outline-primary">Login</a>
                    <a class="btn btn-primary">Register</a>
                </li>
            </ul>
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/home/aboutus">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/home/contactus">Contacts</a>
                </li>
            </ul>

        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            Copyright &copy; Book Store @DateTime.Now.Year
        </div>
    </footer>
</body>
</html>
